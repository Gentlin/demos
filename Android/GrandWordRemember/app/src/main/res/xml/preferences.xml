<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
        <PreferenceCategory android:title="外观设置">
            <ListPreference
                android:key="word_color_list_key"
                android:defaultValue="Red"
                android:title="选择单词颜色"
                android:summary="list_summary"
                android:entries="@array/list_preference"
                android:entryValues="@array/list_preference"
                android:dialogTitle="选择单词颜色" />
        </PreferenceCategory>
        <PreferenceCategory android:title="其他设置"
            android:key="othter_setting">
            <EditTextPreference
                android:key="num_of_word_edittext_key"
                android:defaultValue="10"
                android:summary="10"
                android:title="设置单词数量" />
            <CheckBoxPreference
                android:key="save_checkbox_key"
                android:defaultValue="true"
                android:checked="true"
                android:summary=""
                android:title="是否在保存时进行统计"
                />
        </PreferenceCategory>
</PreferenceScreen>